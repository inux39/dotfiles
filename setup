#!/bin/sh
ShellPath=$(cd $(dirname $0); pwd)

# vimrc
if [ ! -e $HOME/.vim/.vimrc ]; then
	if [ ! -e $HOME/.vim ]; then
		mkdir $HOME/.vim
	fi
	ln -sf $ShellPath/vimrc $HOME/.vim/.vimrc
fi
# Zsh
if [ ! -e $HOME/.config/zsh/zprofile ]; then
	ln -sf $ShellPath/zsh/zprofile $HOME/.config/zsh/.zprofile
fi
if [ ! -e $HOME/.zshenv ]; then
	ln -sf $ShellPath/zsh/zshenv $HOME/.zshenv
fi
if [ ! -e $HOME/.config/zsh/.zshrc ]; then
	if [ ! -e $HOME/.config/zsh ]; then
		mkdir $HOME/.config/zsh
	fi
	ln -sf $ShellPath/zsh/zshrc $HOME/.config/zsh/.zshrc
	source $HOME/.config/zsh/.zshrc
fi

# font config
if [ ! -e $HOME/.config/fontconfig ]; then
	ln -sf $ShellPath/fontconfig $HOME/.config/fontconfig
fi

# gitconfig
if [ ! -e $HOME/.gitconfig ]; then
	ln -sf $ShellPath/.gitconfig $HOME/.gitconfig
fi

# gitignore
if [ ! -e $HOME/.gitignore ]; then
	ln -sf $ShellPath/.gitignore $HOME/.gitignore
fi

# vim bundle install
if [ ! -e $HOME/.vim/bundle ]; then
	curl https://raw.githubusercontent.com/Shougo/neobundle.vim/master/bin/install.sh | sh
fi

