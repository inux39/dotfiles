#!/bin/sh
ShellPath=$(cd $(dirname $0); pwd)
echo "Select 0:Server 1:Client"
read -p ":" select

if [ $select == 1 ]; then
	#xprofile
	if [ ! -e $HOME/.xprofile ]; then
		ln -s $ShellPath/xprofile $HOME/.xprofile
	fi
fi
if [ ! -e $HOME/.zshenv ]; then
	ln -s $ShellPath/zshenv $HOME/.zshenv
fi
# vimrc
if [ ! -e $HOME/.vim/.vimrc ]; then
	if [ ! -e $HOME/.vim ]; then
		mkdir $HOME/.vim
	fi
	ln -s $ShellPath/vimrc $HOME/.vim/.vimrc
fi

# zshrc
if [ ! -e $HOME/.config/zsh/.zshrc ]; then
	if [ ! -e $HOME/.config/zsh ]; then
		mkdir $HOME/.config/zsh
	fi
	ln -s $ShellPath/zshrc $HOME/.config/zsh/.zshrc
	source $HOME/.config/zsh/.zshrc
fi

# font config
if [ ! -e $HOME/.config/fontconfig ]; then
	ln -s $ShellPath/fontconfig $HOME/.config/fontconfig
fi

# gitconfig
if [ ! -e $HOME/.gitconfig ]; then
	ln -s $ShellPath/.gitconfig $HOME/.gitconfig
fi

# vim bundle install
if [ ! -e $HOME/.vim/bundle ]; then
	curl https://raw.githubusercontent.com/Shougo/neobundle.vim/master/bin/install.sh | sh
fi

