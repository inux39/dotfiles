#!/bin/sh
home=~/
cdpath=$(cd $(dirname $0); pwd)
vimrc=$cdpath/.vimrc
zshrc=$cdpath/.zshrc
fonts=$cdpath/.fonts.conf
binpath="${home}bin"

# vimrc
if [ ! -e ~/.vimrc ]; then
	ln -s $vimrc $home
fi

# zshrc
if [ ! -e ~/.zshrc ]; then
	ln -s $zshrc $home
	source ~/.zshrc
fi

# bin
if [ ! -e $home/bin ]; then
	mkdir $home/bin
fi
if [ ! -e $binpath/makepdf ]; then
	ln -s $cdpath/makepdf $binpath
fi

# font config
if [ ! -e $home/$fonts ]; then
	cp $fonts $home
fi

# vim bundle install
if [ ! -e $home/.vim ]; then
	curl https://raw.githubusercontent.com/Shougo/neobundle.vim/master/bin/install.sh | sh
fi

echo "Complete"
