#!/bin/sh
#ローカル以外からのSSHでメールしてくれるやつ
#多分必要: s-nail ssmtp
#ssmtpは要設定

TEXT='192.168'
IFS='.'
set -- $TEXT
LocalIP1=$1
LocalIP2=$2
set -- $SSH_CLIENT
CheckIP1=$1
CheckIP2=$2
if [ "$LocalIP1" != "$CheckIP1" ]; then
	if [ "$LocalIP2" != "$CheckIP2" ]; then
		echo -e "`date`\n\"$USER\" has logged on from $SSH_CLIENT" | mailx -s "SSH LOGIN ALERT" inux.0x27@gmail.com
	fi
fi

