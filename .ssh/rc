#!/bin/sh
#ローカル以外からのSSHでメールしてくれるやつ
#多分必要: s-nail ssmtp
#ssmtpは要設定

Clear4='192'
Clear6='fe80'
if [ ${#SSH_CLIENT} -le 15 ]; then
	From=${SSH_CLIENT:0:3}
else
	From=${SSH_CLIENT:0:4}
fi
if [ "$Clear4" != "$From" -a "$Clear6" != "$From" ]; then
	echo -e "`date`\n\"$USER\" has logged on from $SSH_CLIENT" | mailx -s "SSH LOGIN ALERT" inux.0x27@gmail.com
fi

