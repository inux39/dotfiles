#!/bin/zsh
set -Ceu
ffmpeg=$HOME/ffmpeg/bin/ffmpeg
IFS=$'\n'
LOG=".encode.toml"
ORIG="ts"
ENCODED="webm"

if [ ! -e $ORIG ]; then
    mkdir $ORIG
fi

if [ ! -e $ENCODED ]; then
    mkdir $ENCODED
fi

function tssearch() {
    for file in `find . -maxdepth 1 -name '*.ts' | sort`; do
        if [ ! -e $file ]; then; continue; fi
        if [ -e "${file%ts}webm" ]; then; continue; fi
        echo $file
        break
    done
}

if [ ! -e $LOG ]; then
    touch $LOG
else
    if [ "`tail -n 1 $LOG`" != "" ]; then
        echo "" >> $LOG
    fi
fi

while true
do
    NEXT=`tssearch`
    if [ -e "stop" ]; then; exit; fi
    if [ -e "break" ]; then; sleep 10s; fi
    if [ -n "$NEXT" ]; then
        # log
        echo "[[program]]" >> $LOG
        echo "name = \"${NEXT/.\//}\"" >> $LOG
        echo "start = `date +%s`" >> $LOG

        # encode
        $ffmpeg -n -i $NEXT \
        -c:v libvpx-vp9 -c:a libopus -vpre vp9-next \
        -vf bwdif=1:-1:1 -crf 38 "${NEXT%ts}webm"

        # log
        echo "end = `date +%s`" >> $LOG
        echo "" >> $LOG
        mv "${NEXT}" $ORIG
        mv "${NEXT%ts}webm" $ENCODED
    else
        sleep 1s
    fi
done

# Comment
#   reference: https://developers.google.com/media/vp9/settings/vod/
# CRF
#   720:  32
#   1080: 31

