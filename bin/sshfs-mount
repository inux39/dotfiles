#!/bin/zsh
set -Ceu
dir=WD30EFRX
uroot=/tmp/`whoami`
mount=/mnt/$dir

smb="racoon.local"
ver="arcticfox.local"

if [ ! -e $mount ]; then;
	mkdir $mount
fi

if [ $# = 0 ]; then;
	sshfs $smb:/mnt/$dir $mount
else
	if [ $1 = "arc" ]; then
		if [ ! -e $uroot/mnt ]; then
			mkdir $uroot/mnt
		fi
		sshfs $ver:/mnt  $uroot/mnt
		sshfs $ver:/mnt/disk1 /mnt/disk1
	fi

	if [ $1 = "tmp" ]; then
		if [ ! -e $uroot/$dir ]; then
			mkdir $uroot/$dir
		fi
		sshfs $smb:/mnt/$dir $uroot/$dir
	fi
fi


