#!/bin/zsh
set -Ceu
uroot=/tmp/`whoami`
mount="/mnt/array0"
full_mount=("/mnt/WD30EFRX" "/mnt/array0")

fserv="racoon.local"
eserv="arcticfox.local"

function mkmountdir() {
    local d=$1
    if [ ! -e $d ]; then
        mkdir $d
    fi
}

function rmount() {
    local remote=$1
    local mountdir=$2
    local _local=$3
    mkmountdir $_local
    sshfs -o allow_root -o reconnect $remote:$mountdir $_local
}

if [ $# = 0 ]; then
    if [ `hostname` = "arcticfox" ]; then
        for i in "${full_mount[@]}"; do
            rmount 10G-racoon.local $i $i
        done
    else
        rmount racoon.local $mount $mount
    fi
elif [ $# = 2 ]; then
    if [ $1 = "remote" ]; then
        if [ $2 = "racoon" ]; then
            rmount racoon.local $mount $mout
        fi
    fi
fi

