#!/bin/zsh

function help () {
    echo "1. s3をこのディレクトリに同期させる"
    echo "2. s3をこのディレクトリに同期させる(s3上のデータの削除がされるかも!)"
    echo "3. このディレクトリをs3に同期させる"
}

if [ $# = 0 ]; then
    help
elif [ $1 = 1 ]; then
    aws s3 sync --exact-timestamps www.inux39.me s3://www.inux39.me
elif [ $1 = 2 ]; then
    aws s3 sync --exact-timestamps --delete www.inux39.me s3://www.inux39.me
elif [ $1 = 3 ]; then
    aws s3 sync --exact-timestamps s3://www.inux39.me www.inux39.me
else
    help
fi

